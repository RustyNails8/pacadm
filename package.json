{
  "name": "pacadm",
  "version": "3.1.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "update-csv": "node updateVersion.js && npm run make"
  },
  "build": {
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["*.csv", "*.json"]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RustyNails8/pacadm.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "RustyNails8",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^35.4.0"
  },
  "bugs": {
    "url": "https://github.com/RustyNails8/pacadm/issues"
  },
  "homepage": "https://github.com/RustyNails8/pacadm#readme",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "xlsx": "^0.18.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "extraResource": [
          "resources/PACADM.csv",
          "resources/version.json"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "pacadm"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
